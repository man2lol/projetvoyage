{% extends 'base.html.twig' %}

{% block title %} Modifier un Client {% endblock %}

{% block content %}
<h1>Modifier un Client</h1>

{% if session.message is defined %}
    <p style="color: red;">{{ session.message }}</p>
{% endif %}

<form method="post">
    <input type="hidden" name="id" value="{{ client.id }}">

    <label>Nom :</label>
    <input type="text" name="nom" value="{{ client.nom }}" required>

    <label>Pr√©nom :</label>
    <input type="text" name="prenom" value="{{ client.prenom }}" required>

    <label>Date de Naissance :</label>
    <input type="date" name="date_naissance" value="{{ client.date_naissance }}" required>

    <label>Identifiant :</label>
    <input type="text" name="identifiant" value="{{ client.identifiant }}" required>

    <button type="submit">Modifier</button>
</form>

<a href="index.php?page=list-clients">Retour</a>
{% endblock %}
