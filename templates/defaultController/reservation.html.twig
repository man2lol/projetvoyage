<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Réservation de Voyage</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }
        table {
            width: 60%;
            border-collapse: collapse;
            background: white;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }
        th, td {
            padding: 15px;
            text-align: center;
            border: 1px solid #ddd;
        }
        select, input {
            width: 100%;
            padding: 10px;
        }
        button {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
        }
        button:hover {
            background-color: #218838;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Pays</th>
            <th>Ville</th>
            <th>Nombre de personnes</th>
            <th>Action</th>
        </tr>
        <tr>
            <td>
                <select id="pays" onchange="updateVilles()">
                    <option value="bresil">Brésil</option>
                    <option value="etat-unis">États-Unis</option>
                    <option value="maroc">Maroc</option>
                    <option value="espagne">Espagne</option>
                </select>
            </td>
            <td>
                <select id="ville">
                    
                </select>
            </td>
            <td>
                <input type="number" id="personnes" min="1" max="10" value="1">
            </td>
            <td>
                <button onclick="payer()">Paiement</button>
            </td>
        </tr>
    </table>

    <script>
        const villes = {
            "bresil": ["Rio de Janeiro", "São Paulo", "Salvador"],
            "etat-unis": ["Boston", "New York", "Washington"],
            "maroc": ["Rabat", "Marrakech", "Casablanca"],
            "espagne": ["Barcelone", "Valence", "Madrid"]
        };

        function updateVilles() {
            let pays = document.getElementById("pays").value;
            let villeSelect = document.getElementById("ville");
            villeSelect.innerHTML = "";
            villes[pays].forEach(ville => {
                let option = document.createElement("option");
                option.textContent = ville;
                villeSelect.appendChild(option);
            });
        }

        function payer() {
            let pays = document.getElementById("pays").value;
            let ville = document.getElementById("ville").value;
            let personnes = document.getElementById("personnes").value;
            alert(`Réservation confirmée pour ${personnes} personne(s) à ${ville}, ${pays.toUpperCase()}.`);
        }

        window.onload = updateVilles;
    </script>
</body>
</html>
