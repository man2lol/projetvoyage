{% extends 'base.html.twig' %}

{% block title %}Modifier un Bénéficiaire{% endblock %}

{% block content %}
    <h2>Modifier un Bénéficiaire</h2>

    {% if session.message is defined %}
        <p style="color: red;">{{ session.message }}</p>
    {% endif %}

    <form method="post">
        <input type="hidden" name="id" value="{{ beneficiaire.id }}">

        <label>Nom :</label>
        <input type="text" name="nom" value="{{ beneficiaire.nom }}" required>

        <label>Prénom :</label>
        <input type="text" name="prenom" value="{{ beneficiaire.prenom }}" required>

        <button type="submit">Modifier</button>
    </form>

    <a href="index.php?page=list-beneficiaires">⬅ Retour</a>
{% endblock %}
