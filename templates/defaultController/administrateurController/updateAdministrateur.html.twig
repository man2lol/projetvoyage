{% extends 'base.html.twig' %}

{% block title %}Modifier Administrateur{% endblock %}

{% block content %}
    <h2>Modifier l'Administrateur</h2>

    {% if session.message is defined %}
        <p style="color: red;">{{ session.message }}</p>
    {% endif %}

    <form method="post">
        <input type="hidden" name="id" value="{{ administrateur.id }}">

        <label>Nom :</label>
        <input type="text" name="nom" value="{{ administrateur.nom }}" required>

        <label>Identifiant :</label>
        <input type="text" name="identifiant" value="{{ administrateur.identifiant }}" required>

        <button type="submit">Modifier</button>
    </form>

    <a href="index.php?page=list-administrateurs">â¬… Retour</a>
{% endblock %}
